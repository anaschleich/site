<% const options = { weekday: 'short', year: 'numeric', month: 'long', day:
'numeric', hour: 'numeric', minute: 'numeric', hour12: false } %>

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Site de Tecnologia</title>

    <%- include('./../common/bootstrap_cdn.ejs') %>

    <!-- Estilo CSS externo -->
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>
    <%- include('./../common/header.ejs') %>

    <main>
      <div class="container">
        <div class="bg-light p-5 rounded mt-4 mb-4">
          <h1>Not√≠cias</h1>
        </div>
      </div>

      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mb-4">
          <% noticias.forEach(noticia => { %>
          <div class="col mb-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <p class="card-text"><%= noticia.titulo %></p>
                <div class="d-flex justify-content-between align-itens-center">
                  <div class="btn-group">
                    <a
                      class="btn btn-sm btn-outline-primary"
                      href="/noticia?id=<%= noticia.id_noticia %>"
                    >
                      Saiba Mais
                    </a>
                  </div>
                  <small class="text-muted">
                    <%= noticia.data_criacao.toLocaleString('pt-BR', options) %>
                  </small>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>

    <%- include('./../common/footer.ejs') %>

    <script src="./js/script.js"></script>
  </body>
</html>
